generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  PARENT
  TUTOR
  USER // default when no data would be received
  ADMIN // For system oversight, managing profiles, etc. (future expansion)
}

enum ClassStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

model Ping {
  id        Int      @id @default(autoincrement())
  message   String   @default("pong")
  createdAt DateTime @default(now())
}

model Account {
  id                 String    @id @default(cuid())
  userId             String
  providerType       String
  providerId         String
  providerAccountId  String
  refreshToken       String?
  accessToken        String?
  accessTokenExpires DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  user               User      @relation(fields: [userId], references: [id])

  @@unique([providerId, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  expires      DateTime
  sessionToken String   @unique
  accessToken  String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  email       String?  @unique
  password    String? // For Credentials Provider (email/password login)
  fullname    String
  role        UserRole @default(USER)
  phoneNumber String?  @unique

  isVerified               Boolean?  @default(false)
  verificationDocument     String?   // URL to uploaded ID proof
  verficationToken         String?
  verficationTokenExpiry   DateTime?
  passwordResetToken       String?
  passwordResetTokenExpiry DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  accounts  Account[]
  sessions  Session[]
  
  // Role specific
  tutorProfile TutorProfile?
  students     Student[]     @relation("ParentStudents") // For Parents
}

model TutorProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  
  subjects  String[]
  bio       String?
  hourlyRate Decimal?
  location  String?
  isVerified Boolean @default(false)
  
  classes   Class[]
  resources Resource[]
}

model Resource {
  id        String   @id @default(cuid())
  tutorId   String
  tutor     TutorProfile @relation(fields: [tutorId], references: [id])
  
  title     String
  type      ResourceType
  url       String?
  content   String?
  createdAt DateTime @default(now())
}

enum ResourceType {
  PDF
  LINK
  TEXT
  IMAGE
}

model Student {
  id           String   @id @default(cuid())
  parentId     String
  parent       User     @relation("ParentStudents", fields: [parentId], references: [id])
  
  name         String
  studentId    String   @unique // YYYY + 7 chars (e.g., 2024ABC1234)
  password     String   // Simple password set by parent
  
  // Extended Profile
  age          Int?
  photo        String?
  school       String?
  aspirations  String?
  interests    String[]
  
  classes      Class[]
  homeworks    Homework[]
  reports      Report[]
}

model Class {
  id        String   @id @default(cuid())
  tutorId   String
  tutor     TutorProfile @relation(fields: [tutorId], references: [id])
  studentId String
  student   Student      @relation(fields: [studentId], references: [id])
  
  scheduledAt DateTime
  status      ClassStatus @default(SCHEDULED)
  attendanceToken String?
  
  homeworks   Homework[]
}

model Homework {
  id        String   @id @default(cuid())
  classId   String
  class     Class    @relation(fields: [classId], references: [id])
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  
  title     String
  description String?
  dueDate   DateTime?
  isCompleted Boolean @default(false)
}

model Report {
  id        String   @id @default(cuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  
  title     String
  feedback  String
  grade     String?
  createdAt DateTime @default(now())
}

model VerificationRequest {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, token])
}
